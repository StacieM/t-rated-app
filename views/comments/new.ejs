<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a New Comment to <%= teacher.name %></h1>
        <!-- <div style="width: 30%; margin: 25 auto;"> -->
        <div class='col-md-4'>
            <form action="/teachers/<%= teacher._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Your comments">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" value="<%= currentUser.username %>" readonly>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/teachers">Go Back</a>
        </div>
        <!-- <div style="width: 70%; margin: 25 auto;"> -->
        <div class='col-md-8'>
            <img class="img-responsive" src="<%= teacher.image %>">
        </div>
    </div>
</div>
<% include ../partials/footer %>